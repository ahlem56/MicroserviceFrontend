{
  "/maps/api/*": {
    "target": "https://maps.googleapis.com",
    "secure": true,
    "changeOrigin": true,
    "pathRewrite": {
      "^/maps/api": "/maps/api"
    }
  },
  "/vehicule-service/**": {
    "target": "http://localhost:8090",
    "secure": false,
    "changeOrigin": true,
    "logLevel": "debug"
  },
  "/event-service/**": {
    "target": "http://localhost:8090",
    "secure": false,
    "changeOrigin": true,
    "logLevel": "debug"
  },
  "/trip/**": {
    "target": "http://localhost:8090",
    "secure": false,
    "changeOrigin": true,
    "logLevel": "debug"
  },
  "/driver-service/**": {
    "target": "http://localhost:8090",
    "secure": false,
    "changeOrigin": true,
    "logLevel": "debug"
  },
  "/auth": {
    "target": "http://localhost:8090",
    "secure": false,
    "changeOrigin": true,
    "logLevel": "debug",
    "pathRewrite": { "^/auth": "/user-service/auth" }
  },
  "/api": {
    "target": "http://localhost:8090",
    "secure": false,
    "changeOrigin": true,
    "logLevel": "debug",
    "pathRewrite": { "^/api": "/user-service/api" }
  }
}
